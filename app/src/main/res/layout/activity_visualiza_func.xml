<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Empresa.VisualizaFunc">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"

        >

        <Button
            android:id="@+id/btnVoltar"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_arrow_back_black_24dp"
            />

        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:text="Visualização"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textColor="#fff"
            />


    </Toolbar>

        <TextView
            android:id="@+id/txNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="20dp"
            android:textSize="25sp"
            android:text="Nome: "
            android:textColor="@color/colorBlack"
            />

        <TextView
            android:id="@+id/nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_toRightOf="@+id/txNome"
            android:layout_marginLeft="10dp"
            android:textSize="25sp"
            android:text="Nome"
            android:textColor="@color/colorBlack"
            />

        <TextView
            android:id="@+id/txCPF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:textSize="25sp"
            android:layout_below="@id/nome"
            android:text="CPF: "
            android:textColor="@color/colorBlack"
            />

        <TextView
            android:id="@+id/cpfs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/txCPF"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/nome"
            android:textSize="25sp"
            android:text="cpf"
            android:textColor="@color/colorBlack"
            />

        <TextView
            android:id="@+id/txEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:textSize="25sp"
            android:layout_below="@id/cpfs"
            android:text="Email: "
            android:textColor="@color/colorBlack"
            />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/txCPF"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/cpfs"
            android:textSize="25sp"
            android:text="email"
            android:textColor="@color/colorBlack"
            />

        <TextView
            android:id="@+id/txQtDep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:textSize="25sp"
            android:layout_below="@id/email"
            android:text="Quantidade de Dependentes: "
            android:textColor="@color/colorBlack"
            />

        <TextView
            android:id="@+id/dep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/txQtDep"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/email"
            android:textSize="25sp"
            android:text="0"
            android:textColor="@color/colorBlack"
            />

        <TextView
            android:id="@+id/txEmpresa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:textSize="25sp"
            android:layout_below="@id/dep"
            android:text="Empresa:"
            android:textColor="@color/colorBlack"
            />

        <TextView
            android:id="@+id/empresa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txQtDep"
            android:layout_marginLeft="-214dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/txQtDep"
            android:text="nome"
            android:textColor="@color/colorBlack"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/txDataAdm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:textSize="25sp"
            android:layout_below="@id/empresa"
            android:text="Data Admissão:"
            android:textColor="@color/colorBlack"
            />

        <TextView
            android:id="@+id/dataAdm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txEmpresa"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/txDataAdm"
            android:text="data"
            android:textColor="@color/colorBlack"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/txCargo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:textSize="25sp"
            android:layout_below="@id/dataAdm"
            android:text="Cargo: "
            android:textColor="@color/colorBlack"
            />

        <TextView
            android:id="@+id/cargo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txDataAdm"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/txCargo"
            android:text="cargo"
            android:textColor="@color/colorBlack"
            android:textSize="25sp" />

    </RelativeLayout>

</ScrollView>